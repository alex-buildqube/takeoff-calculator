{
	"name": "takeoff-monorepo",
	"private": true,
	"packageManager": "pnpm@10.24.0",
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build format",
		"change": "pnpm changeset",
		"test": "turbo run test",
		"test:local": "turbo run test:local",
		"test:rust": "turbo run cargo:test",
		"test:all": "turbo run cargo:test test:local",
		"cargo:test": "cargo test",
		"clean:main": "git clean -xdf node_modules .turbo .next target",
		"lint": "biome check",
		"check": "turbo run lint check:fmt check:clippy",
		"check:fmt": "cargo fmt --check",
		"check:clippy": "cargo clippy --workspace",
		"format": "turbo run format format:toml format:rs format:fix format:rs:fix",
		"format:fix": "biome check --write",
		"bench": "turbo run bench",
		"format:toml": "taplo format",
		"format:rs": "cargo fmt",
		"format:rs:fix": "cargo fix --allow-dirty",
		"release": "pnpm --filter ./packages/bindings create-npm-dirs && pnpm --filter ./packages/bindings artifacts && ls -R ./packages/bindings/npm && pnpm changeset publish",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.14",
		"@changesets/cli": "^2.29.8",
		"@taplo/cli": "^0.7.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.6",
		"turbo": "^2.8.3"
	},
	"version": "0.0.1"
}
